generator client {
  provider  = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  userName  String
  email     String   @unique
  password  String
  // NEW: Link to the tokens table for session management
  refreshTokens RefreshToken[] 
}

// NEW MODEL: This keeps the database small by only storing active session IDs (jti)
model RefreshToken {
  id          String   @id @default(uuid()) // This is our 'jti'
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  @@index([userId])
}